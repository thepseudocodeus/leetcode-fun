{
    // ====================
    // WORKBENCH & UI
    // ====================
    "workbench.colorTheme": "3. ðŸ¦‰ Night Owl: Wisdom in Darkness",
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.showTabs": "multiple",
    "workbench.editor.enablePreview": false,
    "workbench.tree.indent": 18,
    "workbench.statusBar.visible": true,
    "window.zoomPerWindow": true,
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
    "window.commandCenter": false,
    // Explorer
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    "explorer.decorations.colors": true,
    "explorer.decorations.badges": true,
    // Minimap & Breadcrumbs
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": true,
    // ====================
    // EDITOR
    // ====================
    "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'Cascadia Code', monospace",
    "editor.fontSize": 16,
    "editor.lineHeight": 1.6,
    "editor.fontLigatures": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "underline-thin",
    "editor.cursorWidth": 2,
    "editor.renderWhitespace": "selection",
    "editor.renderLineHighlight": "all",
    "editor.selectionHighlight": true,
    "editor.occurrencesHighlight": "singleFile",
    "editor.semanticHighlighting.enabled": true,
    "editor.stickyScroll.enabled": true,
    "editor.stickyScroll.maxLineCount": 5,
    "editor.inlineSuggest.enabled": true,
    "editor.hover.enabled": true,
    "editor.hover.delay": 300,
    "editor.hover.sticky": true,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.autoClosingBrackets": "languageDefined",
    "editor.autoClosingQuotes": "languageDefined",
    "editor.autoIndent": "full",
    "editor.guides.bracketPairs": "active",
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.guides.indentation": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.folding": true,
    "editor.showFoldingControls": "always",
    "editor.overviewRulerLanes": 0,
    "editor.linkedEditing": true,
    "editor.multiCursorModifier": "alt",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.quickSuggestionsDelay": 0,
    "editor.suggest.preview": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggest.showStatusBar": true,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.wordBasedSuggestions": "matchingDocuments",
    // ====================
    // FILES & GIT
    // ====================
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/__pycache__": true,
        "**/dist": true,
        "**/build": true,
        "**/.venv": true,
        "**/venv": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules/**": true,
        "**/dist/**": true,
        "**/build/**": true,
        "**/.venv/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/.venv": true
    },
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.autofetchPeriod": 180,
    // ====================
    // TERMINAL
    // ====================
    "terminal.integrated.fontFamily": "monospace",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.copyOnSelection": true,
    // ====================
    // LANGUAGE SPECIFIC
    // ====================
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "black-formatter.args": [
            "--line-length",
            "120"
        ],
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll.ruff": "explicit"
        },
        "python.analysis.typeCheckingMode": "basic",
        "python.linting.enabled": true,
        "python.linting.ruffEnabled": true,
        "python.testing.pytestEnabled": true
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    // ====================
    // EXTENSIONS
    // ====================
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "tabnine.experimentalAutoImports": true,
    "jupyter.askForKernelRestart": false,
    "gitlens.codeLens.enabled": true,
    "gitlens.currentLine.enabled": true,
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    // ====================
    // FOCUS & VISUAL HIERARCHY
    // ====================
    "workbench.colorCustomizations": {
        // "editor.background": "#1E1E1E",
        // "editor.foreground": "#D4D4D4",
        // "editorCursor.foreground": "#61AFEF",
        // "editor.lineHighlightBackground": "#2C313C",
        // "editor.selectionBackground": "#3E4451",
        // "sideBar.background": "#1B1B1B",
        // "activityBar.background": "#1E1E1E",
        // "statusBar.background": "#1E1E1E",
        // "tab.activeBackground": "#2C2C2C",
        // "tab.inactiveBackground": "#1E1E1E"
    },
    // Experimental (performance & visual)
    "editor.experimental.asyncTokenization": true,
    "workbench.editor.experimental.decorations.badges": true,
    "workbench.editor.experimental.decorations.colors": true,
    "workbench.editor.experimental.decorations.lineHighlight": true,
    "workbench.editor.experimental.decorations.overviewRuler": true,
    "workbench.editor.experimental.decorations.wordHighlight": true,
    "workbench.editor.experimental.decorations.wordHighlightStrong": true,
    "workbench.editor.experimental.decorations.wordHighlightWeak": true,
    "workbench.activityBar.location": "hidden",
    "julia.environmentPath": "/Users/ajigherighe/.julia/environments/vscode-julia-format"
}
